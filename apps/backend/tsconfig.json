{
	"compilerOptions": {
		"incremental": true,
		"target": "ESNext",
		"module": "commonjs",
		"rootDir": "./src",
		"typeRoots": ["./types", "./node_modules/@types"],
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "src/generated/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "vitest.config.ts"]
}
